{
    "$id": "https://github.com/fullcircl/schemas/raw/main/cardano/draft/rbac-policy.json",
    "$schema": "http://json-schema.org/schema#",
    "title": "Cardano-RBAC Authorization Policy",
    "type": "object",
    "additionalProperties": false,
    "required": [ "0", "1", "2" ],
    "properties": {
        "0": {
            "description": "A URN that uniquely names the policy",
            "$ref": "#/definitions/listString",
            "examples": [ "urn:uuid:f81d4fae-7dec-11d0-a765-00a0c91e6bf6" ]
        },
        "1": {
            "type": "object",
            "description": "The policy's permissions and their assigned subjects",
            "additionalProperties": false,
            "required": [ "list" ],
            "properties": {
                "list": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [ "map" ],
                        "properties": {
                            "map": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "k": {
                                            "$ref": "#/definitions/permission"
                                        },
                                        "v": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": [ "list" ],
                                            "properties": {
                                                "list": {
                                                    "type": "array",
                                                    "items": { "$ref": "#/definitions/listString" }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "2": {
            "type": "object",
            "description": "The policie's roles",
            "additionalProperties": false,
            "required": [ "list" ],
            "properties": {
                "list": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/role" }
                }
            }
        }
    },
    "definitions": {
        "stringList": {
            "type": "object",
            "description": "A list containing only txStrings",
            "additionalProperties": false,
            "required": [ "list" ],
            "properties": {
                "list": {
                    "type": "array",
                    "items": {
                        "$ref": "https://github.com/fullcircl/schemas/raw/main/cardano/draft/tx-metadata.json#/definitions/txString"
                    }
                }
            }
        },
        "listString": {
            "description": "Either a txString or a stringList when the value is over 64 bytes in length",
            "oneOf": [
                { "$ref": "https://github.com/fullcircl/schemas/raw/main/cardano/draft/tx-metadata.json#/definitions/txString" },
                { "$ref": "#/definitions/stringList" }
            ]
        },
        "permission": {
            "type": "object",
            "description": "A list containing a permission's mode, action, and subject",
            "additionalProperties": false,
            "required": [ "list" ],
            "properties": {
                "list": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "$ref": "#/definitions/stringList"
                    }
                }
            }
        },
        "role": {
            "type": "object",
            "description": "A list containing a role's name, permissions, and subjects",
            "additionalProperties": false,
            "required": [ "list" ],
            "properties": {
                "list": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "oneOf": [
                            { "$ref": "https://github.com/fullcircl/schemas/raw/main/cardano/draft/tx-metadata.json#/definitions/txString" },
                            {
                                "type": "object",
                                "description": "A list of permissions",
                                "additionalProperties": false,
                                "required": [ "list" ],
                                "properties": {
                                    "list": {
                                        "type": "array",
                                        "items": { "$ref": "#/definitions/permission" }
                                    }
                                }
                            },
                            {
                                "type": "object",
                                "description": "A list of subjects",
                                "additionalProperties": false,
                                "required": [ "list" ],
                                "properties": {
                                    "list": {
                                        "type": "array",
                                        "items": { "$ref": "#/definitions/listString" }
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    },
    "examples": [
        {
            "0": { "string": "urn:uuid:179a9b65-48bb-482e-8cfb-c53d266f85a3" },
            "1": {
                "list": [
                    {
                        "map": [
                            {
                                "k": {
                                    "list": [
                                        { "string": "grant" },
                                        { "string": "write" },
                                        { "string": "urn:uuid:179a9b65-48bb-482e-8cfb-c53d266f85a3" }
                                    ]
                                },
                                "v": {
                                    "list": [
                                        { "string": "web+cardano://address/addr1qxgnu3h67ctnqfz8hauang4vtmp29nhsp47v56zcqw553lskumdzlg8kqf2sh2ahrvxeqysrndl4spvjngx23y2xuuzs4vpk82" }
                                    ]
                                }
                            }
                        ]
                    }
                ]
            },
            "2": {
                "list": [
                    {
                        "list": [
                            { "string": "User Admin" },
                            {
                                "list": [
                                    {
                                        "list": [
                                            { "string": "grant" },
                                            { "string": "write" },
                                            { "string": "server/users" }
                                        ]
                                    }
                                ]
                            },
                            {
                                "list": [
                                    { "string": "web+cardano://address/addr1qxgnu3h67ctnqfz8hauang4vtmp29nhsp47v56zcqw553lskumdzlg8kqf2sh2ahrvxeqysrndl4spvjngx23y2xuuzs4vpk82" }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}